<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:src="@mipmap/music_player_icon"
        app:shapeAppearanceOverlay="@style/curved" />

    <TextView
        android:id="@+id/songNameTv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_toStartOf="@+id/songDuration"
        android:layout_toEndOf="@+id/img_view"
        android:layout_toRightOf="@+id/img_view"
        android:text="@string/song_name"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center_vertical"
        android:singleLine="true"
        android:id="@+id/songAlbumTv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/songNameTv"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@+id/songDuration"
        android:layout_toEndOf="@+id/img_view"
        android:layout_toRightOf="@+id/img_view"
        android:text="@string/song_name" />

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="8dp"
        android:gravity="center"
        android:text="@string/start_tv"
        android:textColor="@color/black" />
</RelativeLayout>